package bean;

public class Book {
	
	private int id;
	private String title;
	private String author;
	private String publishing;
	private int year;
	private int pages;
	private int price;
	private String binding;
	
	public String a;
	public String b;
	public int c;
	
	public int getId()  {
		return id;
	}
	public void setId(int id)  {
		this.id = id;
	}
	public String getTitle()  {
		return title;
	}
	public void setTitle(String title)  {
		this.title = title;
	}
	public String getAuthor()  {
		return author;
	}
	public void setAuthor(String author)  {
		this.author = author;
	}
	public String getPublishing()  {
		return publishing;
	}
	public void setPublishing(String publishing)  {
		this.publishing = publishing;
	}
	public int getYear()  {
		return year;
	}
	public void setYear(int year)  {
		this.year = year;
	}
	public int getPages()  {
		return pages;
	}
	public void setPages(int pages)  {
		this.pages = pages;
	}
	public int getPrice()  {
		return price;
	}
	public void setPrice(int price)  {
		this.price = price;
	}
	public String getBinding()  {
		return binding;
	}
	public void setBinding(String binding)  {
		this.binding = binding;
	}
	public static void main(String[] args)  {
		
		Book[] book = new Book[2];
		
		book[0] = new Book();
		book[0].id = 1;
		book[0].title = "Гродзенскія гісторыі";
		book[0].author = "Андрэй Павач";
		book[0].publishing = "ЮрСаПринт";
		book[0].year = 2019;
		book[0].pages = 172;
		book[0].price = 10;
		book[0].binding = "soft";
		
		book[1] = new Book();
		book[1].id = 2;
		book[1].title = "Тайны старых фортов";
		book[1].author = "Андрей Мякиш";
		book[1].publishing = "ЮрСаПринт";
		book[1].year = 2017;
		book[1].pages = 160;
		book[1].price = 15;
		book[1].binding = "hard";
	}
	public String toString()  {
		return id + " " + title + " " + author + " " + publishing + " " + year + " " + pages + " " + price + " " + binding;		
	}
}

package logic;

import bean.Book;

public class BookLogic {
	
	public void findAuthor()  {
		
		int i = 0;
		for(i = 0; i < Book.length; i++)  {
			if(book[i].author == a)  {
				System.out.print(book[i]);
			}
		}
		System.out.println("Это список книг заданного автора.");
	}
	public void findPublishing()  {
		
		int i = 0;
		for(i = 0; i < Book.length; i++)  {
			if(book[i].publishing == b)  {
				System.out.print(book[i]);
			}
		}
		System.out.println("Это список книг, выпущенных заданным издательством.");
	}
	public void findYear()  {
		
		int i = 0;
		for(i = 0; i < Book.length; i++)  {
			if(book[i].year > c)  {
				System.out.print(book[i]);
			}
		}
		System.out.println("Это список книг, изданных после заданного года");
	}
}
